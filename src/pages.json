{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue",
		"^loading-(.*)": "@/components/Loading/loading-$1.vue",
		"^Common(.*)": "@/components/Common$1/index.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/home/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/shop/index",
			"style": {
				"navigationBarBackgroundColor": "#87CEFA",
				"navigationBarTextStyle": "white",
				"navigationBarTitleText": "商城中心"
			}
		},
		{
			"path": "pages/order/index",
			"style": {
				"navigationBarBackgroundColor": "#87CEFA",
				"navigationBarTextStyle": "white",
				"navigationBarTitleText": "订单中心"
			}
		},
		{
			"path": "pages/user/index",
			"style": {
				"navigationBarBackgroundColor": "#87CEFA",
				"navigationBarTextStyle": "white",
				"navigationBarTitleText": "用户中心"
			}
		},
		{
			"path": "pages/login/index",
			"style": {
				"navigationStyle": "custom"
			}
		}
	],
	"subPackages": [{
		"root": "pageHome",
		"pages": [{
			"path": "roomReservation/index",
			"style": {
				"navigationStyle": "custom"
			}
			},
			{
				"path": "selectBusiness/index",
				"style": {
					"navigationStyle": "custom"
				}
			}
		]
	}, {
		"root": "pageUser",
		"pages": [{
			"path": "accountManage/index",
			"style": {
				"navigationStyle": "custom"
			}
		}]
	}, {
		"root": "pageOrder",
		"pages": [{
			"path": "orderDetail/index",
			"style": {
				"navigationStyle": "custom"
			}
		},{
			"path": "goodsOrder/index",
			"style": {
				"navigationBarBackgroundColor": "#87CEFA",
				"navigationBarTextStyle": "white",
				"navigationBarTitleText": "商品订单中心"
			}
		}]
	}],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#515151",
		"selectedColor": "#00BFFF",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/home/index",
			"iconPath": "static/tabIcon/home.png",
			"selectedIconPath": "static/tabIcon/home_select.png",
			"text": "首页"
		}, {
			"pagePath": "pages/shop/index",
			"iconPath": "static/tabIcon/shop.png",
			"selectedIconPath": "static/tabIcon/shop_select.png",
			"text": "商城"
		}, {
			"pagePath": "pages/order/index",
			"iconPath": "static/tabIcon/order.png",
			"selectedIconPath": "static/tabIcon/order_select.png",
			"text": "订单"
		}, {
			"pagePath": "pages/user/index",
			"iconPath": "static/tabIcon/my.png",
			"selectedIconPath": "static/tabIcon/my_select.png",
			"text": "我的"
		}]
	}
}
